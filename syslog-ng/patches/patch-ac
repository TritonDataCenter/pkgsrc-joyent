+		LOGDEVPATH="/dev/log";
 	} else if (sysname == "Linux") {
 		LOGDEVTYPE="unix-stream";
+		LOGDEVPATH="/dev/log";
+	} else if (sysname == "NetBSD") {
+		LOGDEVTYPE="unix-dgram";
+		LOGDEVPATH="/var/run/log";
